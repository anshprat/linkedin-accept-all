{
  "manifest_version": 3,
  "name": "LinkedIn Accept All Invitations",
  "version": "1.0",
  "description": "Accept all pending LinkedIn connection invitations with one click.",
  "permissions": ["activeTab", "storage"],
  "icons": {
    "48": "store/icon48.png",
    "128": "store/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "store/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/mynetwork/invitation-manager/*"],
      "js": ["content.js"]
    }
  ]
}
